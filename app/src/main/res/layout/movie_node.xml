<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/movie_list_node"
    android:layout_marginBottom="@dimen/span_10dp"
    android:layout_marginTop="@dimen/span_10dp">

    <ImageView
        android:id="@+id/movie_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/span_5dp"
        android:src="@mipmap/videocamera" />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/span_10dp"
        android:layout_toEndOf="@id/movie_logo"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_16sp"
        tools:text="BUD - LGW, wizz air" />

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/movie_title"
        android:stepSize="0.50"
        android:rating="2.0"
        android:progressTint="@android:color/holo_red_light"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginEnd="@dimen/span_10dp" />


</RelativeLayout>
